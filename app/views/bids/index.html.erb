<h1>Auction</h1>



<table class="table table-striped table-bordered">
  <tr>
    <th>Product name</th>
    <th>Current Bid</th>
    <th>Make your Bid</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td id="chat"><%= render @bids %></td>
    <td><%= render 'bids/form' %></td>
  </tr>    
  <% end %>
</table>

